{
  "name": "@lianliss/alfa-contracts",
  "description": "ALFA Game smart contracts",
  "repository": {
    "type": "git"
  },
  "engines": {
    "node": "22.17.0"
  },
  "version": "1.0.0",
  "type": "module",
  "devDependencies": {
    "@nomicfoundation/hardhat-ethers": "^4.0.2",
    "@nomicfoundation/hardhat-ignition-viem": "^3.0.3",
    "@nomicfoundation/hardhat-toolbox-mocha-ethers": "^3.0.0",
    "@nomicfoundation/hardhat-verify": "^3.0.3",
    "@types/chai": "^4.3.20",
    "@types/chai-as-promised": "^8.0.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.18.8",
    "chai": "^5.3.3",
    "ethers": "^6.15.0",
    "forge-std": "github:foundry-rs/forge-std#v1.9.4",
    "hardhat": "^3.0.7",
    "mocha": "^11.7.4",
    "tsx": "^4.20.6",
    "typescript": "~5.8.0"
  },
  "scripts": {
    "compile": "npx hardhat compile",
    "deploy": "npx hardhat run scripts/deploy.js --network bsc",
    "deploy:forge": "npx hardhat ignition deploy ignition/modules/ALFAForgeModule.ts --network bsc --parameters ignition/parameters.json --deployment-id alfa-bsc-009 --verify --build-profile default",
    "deployStaking": "npx hardhat run scripts/deployStaking.js --network bsc",
    "test": "npx hardhat test",
    "clean": "npx hardhat clean",
    "ignition:help": "npx hardhat ignition --help",
    "debug:bytecode": "ADDR=$ADDR npx hardhat run scripts/compareBytecode.ts --network bsc",
    "verify": "npx hardhat run scripts/verify.ts --network bsc"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.4.0"
  }
}
